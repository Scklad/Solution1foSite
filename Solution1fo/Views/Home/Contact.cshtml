@{
    ViewData["Title"] = "Contact";
}

<div class="container-fluid row">
    <div class="col-3"></div>
    <div class="contact_form col-6">
        <form action="send-contact" method="post">
            <h2>Formulaire de contact</h2>
            <input class="form-control" type="text" name="nom" placeholder="Nom *" required/>
            <input class="form-control" type="text" name="prenom" placeholder="Prenom *" required/>
            <input class="form-control" type="email" name="email" placeholder="adresse@email.com *" required/>
            <input class="form-control" type="tel" name="tel" placeholder="06 06 06 06 06 *" required/>
            <textarea placeholder="Votre demande ... *" class="form-control" required></textarea>
            <!--<span>* champ requis</span><br />-->
            <button type="submit" class="btn btn-default">Envoyer</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>
